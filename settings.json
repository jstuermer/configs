{
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "[git-commit]": {
        "editor.rulers": [
            50,
            72
        ]
    },
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnType": true
    },
    "autoDocstring.guessTypes": false,
    "black-formatter.importStrategy": "fromEnvironment",
    "clang-format.executable": "/opt/homebrew/Cellar/llvm/16.0.0/bin/clang-format",
    "clang-tidy.executable": "/opt/homebrew/Cellar/llvm/15.0.7_1/bin/clang-tidy",
    "cSpell.language": "en-GB",
    "debug.inlineValues": "on",
    "editor.cursorSurroundingLines": 4,
    "editor.fontFamily": "UbuntuMono Nerd Font",
    "editor.fontSize": 14,
    "editor.formatOnSave": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.indentation": true,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.rulers": [
        100
    ],
    "editor.semanticHighlighting.enabled": true,
    "gitlens.ai.experimental.generateCommitMessage.enabled": false,
    "gitlens.views.commitDetails.files.layout": "list",
    "isort.args": [
        "--profile",
        "black"
    ],
    "jupyter.askForKernelRestart": false,
    "mypy.extraArguments": [
        "--explicit-package-bases"
    ],
    "nixEnvSelector.suggestion": false,
    "notebook.formatOnSave.enabled": true,
    "notebook.lineNumbers": "on",
    "projectManager.git.baseFolders": [
        "$home/Work/"
    ],
    "projectManager.sortList": "Recent",
    "python.analysis.addImport.exactMatchOnly": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.inlayHints.callArgumentNames": "partial",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.defaultInterpreterPath": "/Users/jstuermer/.pyenv/versions/3.9.16/envs/env-3.9.16/bin/python",
    "redhat.telemetry.enabled": false,
    "terminal.external.osxExec": "iterm2",
    "terminal.integrated.fontFamily": "UbuntuMono Nerd Font",
    "terminal.integrated.fontSize": 14,
    "testing.automaticallyOpenPeekView": "never",
    "testing.openTesting": "neverOpen",
    "vim.easymotion": true,
    "vim.highlightedyank.color": "rgba(255, 112, 0, 0.8)",
    "vim.highlightedyank.enable": true,
    "vim.leader": " ",
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "m"
            ],
            "commands": [
                "bookmarks.toggle"
            ]
        },
        {
            "before": [
                "<leader>",
                "b"
            ],
            "commands": [
                "bookmarks.listFromAllFiles"
            ]
        },
        {
            "before": [
                "<leader>",
                "B"
            ],
            "commands": [
                "editor.debug.action.conditionalBreakpoint"
            ]
        },
        {
            "before": [
                "<leader>",
                "d"
            ],
            "commands": [
                "editor.action.revealDefinition"
            ]
        },
        {
            "before": [
                "<leader>",
                "r"
            ],
            "commands": [
                "editor.action.goToReferences"
            ]
        },
        {
            "before": [
                "<leader>",
                "c"
            ],
            "commands": [
                "breadcrumbs.focusAndSelect"
            ]
        },
        {
            "before": [
                "<leader>",
                "h"
            ],
            "commands": [
                "editor.showCallHierarchy"
            ]
        },
        {
            "before": [
                "<leader>",
                "o"
            ],
            "commands": [
                "outline.focus"
            ]
        },
        {
            "before": [
                "<leader>",
                "<leader>",
                "b"
            ],
            "commands": [
                "gitlens.toggleFileBlame"
            ]
        },
        {
            "before": [
                "<leader>",
                "t"
            ],
            "commands": [
                "testing.cancelRun"
            ]
        },
        {
            "before": [
                "<leader>",
                "T"
            ],
            "commands": [
                "testing.refreshTests"
            ]
        },
        {
            "before": [
                "<leader>",
                "p"
            ],
            "commands": [
                "editor.action.marker.next"
            ]
        },
        {
            "before": [
                "<leader>",
                "e"
            ],
            "commands": [
                "editor.action.smartSelect.expand"
            ]
        }
    ],
    "vim.smartRelativeLine": true,
    "vim.useSystemClipboard": true,
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "e"
            ],
            "commands": [
                "editor.action.smartSelect.expand"
            ]
        }
    ],
    "window.commandCenter": false,
    "window.titleBarStyle": "custom",
    "workbench.activityBar.location": "hidden",
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "workbench.editor.wrapTabs": true,
    "workbench.layoutControl.enabled": false,
    "yaml.format.enable": false
}